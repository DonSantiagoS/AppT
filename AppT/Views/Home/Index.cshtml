@model List<Register>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Messi</h1>
      
</div>
 
<div class="card">
  <div class="card-header">
      @ViewBag.Accion
    
  </div>
  <div class="card-body">
     <a asp-action="Registro" asp-controller="Home" asp-route-Registro="0" class="btn btn-success btn-sm"> Nuevo Registro</a>
     <hr />
     <table class="table">
         <thead>
             <tr>
                 <th>Title</th>
                 <th>Description</th>
                 <th>Image</th>
             </tr>
         </thead>
         <tbody> 
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.title</td>
                        <td>@item.description</td>
                        <td>@item.href</td>
                    </tr> 
                }

         </tbody>
     </table>
  </div>
</div>